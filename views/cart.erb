<h2> You cart </h2>
<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Price</th>
      <th scope="col">Qty</th>
    </tr>
  </thead>
  <tbody>
  	<% total_price = 0 %>
  	<% total_qty = 0 %>
  	<% @items.each do |item| %>
    <tr>
      <td><%= item[0].title %></td>
      <td><%= item[0].price %></td>
      <td><%= item[1] %></td>
    </tr>
    <% total_price += item[0].price * item[1].to_i%>
    <% total_qty += item[1].to_i %>
    <% end %>

    <tr>
      <td></td>
      <td>Total price: <%= total_price %> rub.</td>
      <td>Total qty: <%= total_qty %></td>
    </tr>
  </tbody>
  <br/>

</table>

  <form action="/contacts" method="POST">

  	<input type="hidden" name="order[orders_input]" value="<%= @orders_input %>">

	<div class="form-group">
	    <label>Name</label>
	    <input name="order[name]" type="email" class="form-control" placeholder="Enter your name">
	    <label>Phone</label>
	    <input name="order[phone]" type="email" class="form-control" placeholder="Enter your phone">
	    <label>Address</label>
	    <input name="order[address]" type="email" class="form-control" placeholder="Enter your address">
	     
  </div>

  <button type="submit" class="btn btn-success">Place this order</button>
</form>
